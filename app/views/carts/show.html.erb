<div class="cart-container">
  <% if @cart.items.first %>
  <% @cart.items.each do |item| %>
    <div class="cart-card">
      <%= item.item_name %>
      <img src="<%= item.image_url%>" alt="image of <%= item.item_name %>" class="small-image">
      <%= item.merchant_name %>
      <%= item.current_price %>
      <%= @cart.contents[item.id.to_s] %>
      <div class="total"
      <%= @cart.subtotal(item) %>
      </div>
    </div>
  <% end %>
  <div class="cart-card">
    <div class="total">
      Total: <%= @cart.cart_total %>
    </div>
  </div>
<% else %>
  <div>Your Cart is empty!</div>
<% end %>
</div>

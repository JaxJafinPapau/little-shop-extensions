<div class="cart-container">
  <% if @cart.items.first %>
    <% @cart.items.each do |item| %>
      <div class="cart-card">
        <div class="image-container">
          <img src="<%= item.image_url%>" alt="image of <%= item.item_name %>" class="small-image">
        </div>
        <h3><%= item.item_name %></h3>
        <p><%= item.merchant_name %></p>
        <p><%= item.current_price %></p>
        <p><%= @cart.contents[item.id.to_s] %></p>
        <div class="total">
          <%= @cart.subtotal(item) %>
        </div>
      </div>
    <% end %>
    <div class="cart-card">
      <div class="total">
        Total: <%= @cart.cart_total %>
      </div>
    </div>

  Total: <%= @cart.cart_total %>
  <%= link_to 'Empty my cart', cart_path, method: :delete %>
<% else %>
  <div>Your Cart is empty!</div>
<% end %>
</div>
